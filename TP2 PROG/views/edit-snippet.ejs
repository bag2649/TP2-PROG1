<%- include('includes/head.ejs') %>


<body>
    <header>
        <%- include('includes/navigation.ejs') %>
    </header>

    <main>
        <form action="/edit-snippet" method="POST" class="was-validated">
            <% if (errorMessage) { %>
                <div class="errors alert alert-danger">
                    Veuillez corriger les erreurs.
                </div>
            <% } %>
            <div class="form-group">
                <label for="title">Title</label>
                <input 
                    type="text" 
                    name="title" 
                    value="<%= snippet.title  %>" 
                    class="form-control is-invalid"
                >
                <% if (errorMessage && errorMessage.title) { %>
                    <div class="invalid-feedback"><%= errorMessage.title.message %></div>
                <% } %>
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea name="content" id="" cols="30" rows="10" class="form-control is-invalid"><%= snippet.content %></textarea>
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" name="url" value="<%= snippet.url %>" class="form-control is-invalid">
            </div>
            <div class="form-group">
                <label for="tags">Tags</label>
                <input type="text" name="tags" value="<%= snippet.tags %>" class="form-control is-invalid">
            </div>

            <input type="hidden" name="snippetId" value="<%= snippet._id %>">

            <button type="submit">Ã‰diter</button>
        </form>
    </main>

    
<%- include('includes/end.ejs') %>

